@model MVCHulladek.Models.ViewModels.MostCountMonthViewModel

@{
    ViewData["Title"] = "MostCountMonth";
}
@{
    List<string> MonthsList = new List<string> { "Január", "Február", "Március", "Április", "Május", "Június", "Július", "Augusztus", "Szeptember", "Október", "November", "December" };
}
<div class="container mt-5">
    <h1 class="text-center mb-4">MostCountMonth</h1>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Legtöbb hulladékot tartalmazó hónap</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Month</th>
                        <th>Count</th>
                    </tr>
                 </thead>
                <tbody>
                    <tr>
                        <td><span class="badge bg-primary">@MonthsList[Model.Month - 1]</span></td>
                        <td><span class="badge bg-secondary">@Model.Count</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>