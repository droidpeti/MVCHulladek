@model IEnumerable<MVCHulladek.Models.ViewModels.GreenCountViewModel>

@{
    ViewData["Title"] = "GreenCount";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">GreenCount</h1>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Évenkénti elszállított zöld hulladék</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Year</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Year</td>
                            <td><span class="badge bg-primary">@item.Count</span></td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
    </div>
</div>